# ==============================================
# Базовые настройки Django
# ==============================================

# Секретный ключ проекта (обязательный, должен быть уникальным)
SECRET_KEY=

# ==============================================
# Настройки PostgreSQL базы данных
# ==============================================

# Движок БД (не изменять для PostgreSQL)
DB_ENGINE=django.db.backends.postgresql

# Имя базы данных (создается при первом запуске)
DB_NAME=

# Пользователь для подключения к БД
POSTGRES_USER=

# Пароль пользователя БД (рекомендуется сложный)
POSTGRES_PASSWORD=

# Хост БД (обычно название сервиса в docker-compose)
DB_HOST=db

# Порт PostgreSQL (стандартный 5432)
DB_PORT=5432